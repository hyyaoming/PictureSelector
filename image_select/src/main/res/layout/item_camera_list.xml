<?xml version="1.0" encoding="utf-8"?>
<org.lym.image.select.weight.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/camera_item_bg">

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_take_photo"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="@string/photo_grid_capture"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</org.lym.image.select.weight.SquareFrameLayout>